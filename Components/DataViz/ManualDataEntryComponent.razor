@using ShiftWorx.Components.Methods
@inject FpData _context;
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Manual Data Entry</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid  Justify="Justify.Center">
            <MudItem xs="1" Class="d-flex align-center justify-center ">
                <MudIconButton Icon="@Icons.Material.Filled.Remove" Variant="Variant.Filled" OnClick="Decrement" Color=" MudBlazor.Color.Primary" Size="Size.Large" />
            </MudItem>
            <MudItem Class="d-flex align-center justify-center  " >
                <MudNumericField @ref="numericField"  @bind-Value="IntValue" Label="Standard" Variant="Variant.Text" Step="1" Min="0" />
            </MudItem>
            <MudItem xs="1" Class="d-flex align-center justify-center  ">
                <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Filled" OnClick="Increment" Color="MudBlazor.Color.Primary" Size="Size.Large" />
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions Class="d-flex align-center justify-end">
        <MudButton Class="me-3" Variant="Variant.Filled" OnClick="Push" Color="MudBlazor.Color.Primary">Submit</MudButton>
    </MudCardActions>
</MudCard>
@code {

    MudNumericField<int> numericField;
    public int IntValue { get; set; } = 0;

   
    public void Increment()
    {
        numericField.Increment();
    }
    public void Decrement()
    {
        numericField.Decrement();
    }    
    public void Push()
    {
 
    }

}








